ENVIRONMENT=dev

# App
APP_NAME=acore
APP_DOMAIN_PROD=live.acore.com
APP_DOMAIN_DEV=localhost
APP_CONTAINER_PORT=8080
APP_BLUE_HOST_PORT=8081
APP_GREEN_HOST_PORT=8082

# Postgres
PG_USER=acore
PG_PASSWORD=acorepassword
PG_NAME=acoredb
PG_HOST=acore-postgres
PG_SSL_MODE=disable
PG_HOST_PORT=5432
PG_CONT_PORT=5432
PG_URL=postgres://${PG_USER}:${PG_PASSWORD}@${PG_HOST}:${PG_CONT_PORT}/${PG_NAME}?sslmode=${PG_SSL_MODE}

# Redis
REDIS_PASSWORD=
REDIS_HOST_PORT=6379
REDIS_CONTAINER_PORT=6379
REDIS_ADDR=acore-redis:6379

# Traefik Reverse Proxy (local)
TRAEFIK_HTTP_HOST_PORT=80
TRAEFIK_HTTPS_HOST_PORT=443
TRAEFIK_HTTP_CONTAINER_PORT=80
TRAEFIK_HTTPS_CONTAINER_PORT=443
TRAEFIK_EMAIL=you@example.com
TRAEFIK_DASHBOARD_PORT=8083

################################################################################
# ▸ DEVELOPMENT (uncomment this block for local/dev work)
################################################################################
TRAEFIK_API_INSECURE=true
TRAEFIK_LOG_LEVEL=DEBUG
TRAEFIK_API_DASHBOARD=true

TRAEFIK_ENTRYPOINTS_TRAEFIK_ADDRESS=:${TRAEFIK_DASHBOARD_PORT:-8083}
TRAEFIK_ENTRYPOINTS_WEB_ADDRESS=:${TRAEFIK_HTTP_CONTAINER_PORT:-80}
TRAEFIK_ENTRYPOINTS_WEBSECURE_ADDRESS=:${TRAEFIK_HTTPS_CONTAINER_PORT:-443}

TRAEFIK_PROVIDERS_DOCKER=true
TRAEFIK_PROVIDERS_DOCKER_EXPOSEDBYDEFAULT=false

# Use file‐provider for your local certs folder:
TRAEFIK_PROVIDERS_FILE_DIRECTORY=/certs
TRAEFIK_PROVIDERS_FILE_WATCH=true
APP_TLS_CERTRESOLVER_LABEL=

################################################################################
# ▸ PRODUCTION (comment out the “DEV” block above, uncomment this in prod)
